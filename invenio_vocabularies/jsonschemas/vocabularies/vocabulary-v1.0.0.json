{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://inveniosoftware.org/schemas/vocabularies/vocabulary-v1.0.0.json",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "title": {
          "type": "object",
          "patternProperties": {
            "^[a-z]{2}$": {
              "type": "string"
            }
          }
        },
        "description": {
          "type": "object",
          "patternProperties": {
            "^[a-z]{2}$": {
              "type": "string"
            }
          }
        },
        "icon": {
          "type": "string"
        },
        "props": {
          "type": "object",
          "patternProperties": {
            "^.*$": {
              "type": "string"
            }
          }
        }
      }
    },
    "vocabulary_type": {
      "type": "integer"
    }
  }
}
