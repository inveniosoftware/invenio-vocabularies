{
  "mappings": {
    "dynamic_templates": [
      {
        "i18n_subject": {
          "path_match": "subject.*",
          "match_mapping_type": "text",
          "mapping": {
            "type": "search_as_you_type"
          }
        }
      }
    ],
    "dynamic": "strict",
    "properties": {
      "$schema": {
        "type": "keyword",
        "index": "false"
      },
      "created": {
        "type": "date"
      },
      "updated": {
        "type": "date"
      },
      "indexed_at": {
        "type": "date"
      },
      "uuid": {
        "type": "keyword"
      },
      "version_id": {
        "type": "integer"
      },
      "id": {
        "type": "keyword"
      },
      "scheme": {
        "type": "keyword"
      },
      "subject": {
        "type": "object",
        "dynamic": "true"
      },
      "pid": {
        "type": "object",
        "properties": {
          "pk": {
            "type": "integer"
          },
          "pid_type": {
            "type": "keyword"
          },
          "obj_type": {
            "type": "keyword"
          },
          "status": {
            "type": "keyword"
          }
        }
      },
      "identifiers": {
        "properties": {
          "identifier": {
            "type": "keyword"
          },
          "scheme": {
            "type": "keyword"
          }
        }
      },
      "synonyms": {
        "type": "text"
      "tags": {
        "type": "keyword"
      }
    }
  }
}
