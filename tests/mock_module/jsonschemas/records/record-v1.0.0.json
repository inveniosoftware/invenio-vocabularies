{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "local://test/records/record-v1.0.0.json",
  "title": "Test Record Schema v1.0.0",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "description": "JSONSchema declaration.",
      "type": "string"
    },
    "id": {
      "description": "Persistent record identifier (alphanumeric).",
      "type": "string"
    },
    "pid": { "$ref": "local://definitions-v1.0.0.json#/internal-pid" },
    "metadata": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "title": {
          "type": "string"
        },
        "languages": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "owners": {
      "type": "array",
      "items": {
        "type": "number"
      }
    },
    "_access": {
      "type": "object",
      "description": "Record access control and ownership.",
      "additionalProperties": false,
      "properties": {
        "metadata_restricted": {
          "description": "Record visibility (public or restricted)",
          "type": "boolean"
        }
      }
    }
  }
}
