{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "local://test/records/record-v1.0.0.json",
  "title": "Test Record Schema v1.0.0",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "description": "JSONSchema declaration.",
      "type": "string"
    },
    "id": {
      "description": "Persistent record identifier (alphanumeric).",
      "type": "string"
    },
    "pid": {
      "type": "object",
      "additionalProperties": false,
      "required": ["pk", "status"],
      "properties": {
        "pk": {
          "type": "integer"
        },
        "status": {
          "type": "string",
          "enum": [
            "N",
            "K",
            "R",
            "M",
            "D"
          ]
        }
      }
    },
    "metadata": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "title": {
          "type": "string"
        },
        "languages": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
